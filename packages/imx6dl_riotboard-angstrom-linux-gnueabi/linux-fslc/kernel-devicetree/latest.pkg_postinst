	cd /boot
	for DTB in imx6dl-riotboard.dtb
	do
		DTB_BASE_NAME=`basename ${DTB} | awk -F "." '{print $1}'`
		DTB_SYMLINK_NAME=`echo zImage-imx6dl-riotboard | sed "s/imx6dl-riotboard/${DTB_BASE_NAME}/g"`
